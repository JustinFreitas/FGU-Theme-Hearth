  <windowclass name="quest_component" merge="join">
    <placement>
      <size height="300" width="300" />
    </placement>
    <sheetdata>
      <formattedtextfield name="text" merge="join">
        <frame>
          <offset>8,8,8,8</offset>
        </frame>
        <script>
			function onInit()
				if Session.IsHost then
					update(false);
				else
					update(true);
				end
			end

			function update(bReadOnly)
				self.setReadOnly(bReadOnly);
				if not bReadOnly then
					self.setFrame("formattedTextFrameEdit", 6,8,0,0);
				else
					self.setFrame(nil, 0,5,0,0);
				end
			end
		</script>
      </formattedtextfield>
    </sheetdata>
  </windowclass>

